{
  "name": "simulacrum-cloud-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/hostctl/main",
    "dev": "npm run start:dev",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@aws-sdk/client-apigatewaymanagementapi": "3.490.0",
    "@aws-sdk/client-dynamodb": "3.490.0",
    "@aws-sdk/lib-dynamodb": "3.490.0",
    "@nestjs/common": "^10.0.1",
    "@nestjs/core": "^10.0.1",
    "@nestjs/platform-express": "^10.0.1",
    "@nestjs/platform-ws": "^10.0.1",
    "@nestjs/websockets": "^10.0.1",
    "@typedorm/common": "^1.15.4",
    "@typedorm/core": "^1.15.4",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "ws": "^8.17.1"
  },
  "devDependencies": {
    "@aws-sdk/types": "^3.489.0",
    "@nestjs/cli": "^10.0.2",
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/testing": "^10.0.1",
    "@smithy/types": "2.8.0",
    "@types/aws-lambda": "^8.10.131",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/node": "20.1.7",
    "@types/supertest": "^2.0.11",
    "@types/ws": "^8.5.5",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "source-map-support": "^0.5.21",
    "supertest": "^6.1.3",
    "testcontainers": "^10.5.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "~5.0.4",
    "webpack": "^5.89.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@simulacrum/db(|/.*)$": "<rootDir>/libs/db/src/$1"
    }
  }
}
